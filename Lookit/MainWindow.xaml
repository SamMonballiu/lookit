<Window x:Class="Lookit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lookit"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="BtnPaste" Click="BtnPaste_Click">hello</Button>
            <Label>First: </Label>
            <Label Name="LblPosFirst"/>
            <Label>Second:</Label>
            <Label Name="LblPosSecond"/>
        </StackPanel>
        <ScrollViewer Height="800" Width="800" HorizontalScrollBarVisibility="Visible">
            <ContentControl Name="ImgControl" MouseUp="ImgControl_OnMouseUp">
                <Image Stretch="Uniform" Width="1200" Height="1200" Name="ImgMain"/>
            </ContentControl>
        </ScrollViewer>
    </StackPanel>
</Window>
