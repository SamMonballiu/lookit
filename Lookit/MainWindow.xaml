<Window x:Class="Lookit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lookit"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="BtnPaste" Click="BtnPaste_Click">Paste</Button>
            <Button Name="BtnScale" Click="BtnScale_Click">Set scale</Button>
            <Button Name="BtnMeasure" Click="BtnMeasure_Click">Measure</Button>
            <StackPanel Margin="12 0 0 0" Orientation="Horizontal">
                <Label>Mode:</Label>
                <Label Name="LblMode" Content="{Binding Path=Mode, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="12 0 0 0" Orientation="Horizontal">
                <Label>First:</Label>
                <Label Name="LblPosFirst"/>
                <Label>Second:</Label>
                <Label Name="LblPosSecond"/>

            </StackPanel>
            <StackPanel Margin="12 0 0 0" Orientation="Horizontal">
                <Label>Scale distance:</Label>
                <TextBox Name="TxtScaleDistance" Width="200"/>
                <Button Name="BtnUpdateScale" Click="BtnUpdateScale_Click">Update</Button>

            </StackPanel>
        </StackPanel>
        <ScrollViewer Height="600" Width="1000" HorizontalScrollBarVisibility="Visible">
            <ContentControl Name="ImgControl" MouseUp="ImgControl_OnMouseUp">
                <Image Stretch="Uniform" Width="1200" Height="1200" Name="ImgMain"/>
            </ContentControl>
        </ScrollViewer>
    </StackPanel>
</Window>
